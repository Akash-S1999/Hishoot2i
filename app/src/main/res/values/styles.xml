<resources>

    <style name="Widget.Hishoot" parent=""/>

    <style name="Widget.Hishoot.Tool"/>

    <style name="Widget.Hishoot.Tool.Image">
        <item name="srcCompat">@drawable/ic_add_box_black_24dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@color/dark50</item>
    </style>

    <style name="Animation.Hishoot.Window" parent="">
        <item name="android:windowEnterAnimation">@anim/popup_en</item>
        <item name="android:windowExitAnimation">@anim/popup_ex</item>
    </style>

    <style name="Widget.Hishoot.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.Hishoot.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.Hishoot.ActionBar.Popup</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
    </style>

    <style name="Widget.Hishoot.ActionBar.Overlay">
        <item name="android:background">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:theme">@style/ThemeOverlay.Hishoot.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.Hishoot.ActionBar.Popup</item>
        <item name="elevation">@dimen/toolbar_elevation</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="ThemeOverlay.Hishoot.ActionBar.Popup" parent="ThemeOverlay.AppCompat">
        <item name="android:background">?colorPrimaryDark</item>
    </style>

    <style name="ThemeOverlay.Hishoot.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.Hishoot.ActionBar.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="Widget.Hishoot.ProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">4dp</item>
        <item name="spb_stroke_width">4dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_progressiveStart_speed">2</item>
        <item name="spb_progressiveStop_speed">3.4</item>
        <item name="spb_interpolator">spb_interpolator_acceleratedecelerate</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/progress_bar_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
        <item name="spb_generate_background_with_colors">false</item>
        <item name="android:minHeight">@dimen/progress_bar_height</item>
        <item name="android:maxHeight">@dimen/progress_bar_height</item>
    </style>

    <style name="TextAppearance.Hishoot" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#de000000</item>
        <item name="android:textColorHint">#de000000</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="TextAppearance.Hishoot.About"/>

    <style name="TextAppearance.Hishoot.About.Title">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="TextAppearance.Hishoot.About.Content">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:typeface">normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Hishoot.About.Content.Sub">
        <item name="android:textColor">?android:textColorTertiary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Hishoot.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Hishoot.SubTitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextAppearance.Hishoot.Switch">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Hishoot" parent="Hishoot.PreferenceTheme"/>

    <style name="Hishoot.Preference.Category">
        <item name="android:layout">@layout/hishoot_preference_category</item>
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>

    <style name="Hishoot.PreferenceFragment">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Hishoot.Preference">
        <item name="android:layout">@layout/hishoot_preference</item>
    </style>
    <style name="Hishoot.SwitchPreferenceCompat">
        <item name="android:layout">@layout/hishoot_preference</item>
        <item name="android:widgetLayout">@layout/preference_widget_switch_compat</item>
        <item name="android:switchTextOn">@string/v7_preference_on</item>
        <item name="android:switchTextOff">@string/v7_preference_off</item>
    </style>
</resources>
