<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        style="@style/Widget.Hishoot.CardView">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/lVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/half_white"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:padding="8dp">

            <TextView
                    android:id="@+id/version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/versi"
                    android:textAppearance="@style/TextAppearance.Hishoot.Title"/>

            <TextView
                    android:id="@+id/versionSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_version"
                    android:maxLines="1"
                    android:ellipsize="marquee"
                    android:textAppearance="@style/TextAppearance.Hishoot.SubTitle"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lNull"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lVersion"
                android:background="@color/half_white"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:padding="8dp">


            <Button
                    android:id="@+id/forceClearNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Force clear notification"/>
            <Button
                    android:id="@+id/importTemplateHtz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import Template Htz"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>