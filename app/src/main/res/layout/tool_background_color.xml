<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolBackgroundColorMix"
        style="@style/AppWidget.TextImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/color_mixer"
        app:drawableTopCompat="@drawable/ic_color_lens_black_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/toolBackgroundColorPipette"
        style="@style/AppWidget.TextImage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/color_pipette"
        app:drawableTopCompat="@drawable/ic_colorize_black_24dp" />

</LinearLayout>
