<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
            android:id="@+id/coverPreview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_template_min_height"/>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_template_min_height"
            android:id="@+id/imPreview"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"/>

    <TextView
            android:id="@+id/txName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@android:string/untitled"
            android:layout_marginLeft="@dimen/item_text_margin_horizontal"
            android:layout_marginStart="@dimen/item_text_margin_horizontal"
            android:layout_marginTop="@dimen/item_text_margin_vertical"
            android:layout_marginBottom="@dimen/item_text_margin_vertical"
            android:textAppearance="@style/TextAppearance.Hishoot.Title"/>

    <TextView
            android:id="@+id/txAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_text_margin_horizontal"
            android:layout_marginStart="@dimen/item_text_margin_horizontal"
            android:layout_marginTop="@dimen/item_text_margin_vertical"
            android:layout_marginBottom="@dimen/item_text_margin_vertical"
            android:text="@android:string/unknownName"
            android:maxLines="3"
            android:ellipsize="start"
            android:textAppearance="@style/TextAppearance.Hishoot.SubTitle"/>

    <org.illegaller.ratabb.hishoot2i.view.widget.CircleButton
            android:id="@+id/imUse"
            android:layout_width="@dimen/item_template_circle_button_size"
            android:layout_height="@dimen/item_template_circle_button_size"
            android:layout_margin="@dimen/item_margin"
            android:visibility="invisible"
            android:tint="@android:color/white"
            app:useCompatPadding="true"
            app:srcCompat="@drawable/ic_check_circle_black_24dp"
            app:cb_color="?colorAccent"
            app:cb_pressedRingWidth="4dp"/>

    <org.illegaller.ratabb.hishoot2i.view.widget.CircleButton
            android:id="@+id/imExpand"
            android:layout_width="@dimen/item_template_circle_button_size"
            android:layout_height="@dimen/item_template_circle_button_size"
            android:layout_margin="@dimen/item_margin"
            android:tint="@android:color/white"
            app:useCompatPadding="true"
            app:srcCompat="@drawable/ic_unfold_more_black_24dp"
            app:cb_color="?colorAccent"
            app:cb_pressedRingWidth="4dp"/>

    <org.illegaller.ratabb.hishoot2i.view.widget.CircleButton
            android:id="@+id/imFav"
            android:layout_width="@dimen/item_template_circle_button_size"
            android:layout_height="@dimen/item_template_circle_button_size"
            android:layout_margin="@dimen/item_margin"
            android:tint="@android:color/white"
            app:useCompatPadding="true"
            app:srcCompat="@drawable/ic_favorite_black_24dp"
            app:cb_color="@color/colorFav"
            app:cb_pressedRingWidth="4dp"/>

    <org.illegaller.ratabb.hishoot2i.view.widget.CircleButton
            android:id="@+id/imInfo"
            android:layout_width="@dimen/item_template_circle_button_size"
            android:layout_height="@dimen/item_template_circle_button_size"
            android:layout_margin="@dimen/item_margin"
            android:visibility="invisible"
            android:tint="@android:color/white"
            app:useCompatPadding="true"
            app:srcCompat="@drawable/ic_adb_black_24dp"
            app:cb_color="?colorAccent"
            app:cb_pressedRingWidth="4dp"/>
</merge>