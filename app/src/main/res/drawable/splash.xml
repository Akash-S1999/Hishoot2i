<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <color android:color="@color/primaryDark" />
    </item>
    <item>
        <bitmap
            android:alpha="0.25"
            android:antialias="true"
            android:dither="true"
            android:filter="true"
            android:src="@drawable/app_texture"
            android:tileMode="repeat" />
    </item>
    <item>
        <bitmap
            android:alpha="0.75"
            android:antialias="true"
            android:dither="true"
            android:filter="true"
            android:gravity="center"
            android:src="@drawable/app_banner"
            android:tileMode="disabled" />
    </item>
</layer-list>